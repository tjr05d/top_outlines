<p id="notice"><%= notice %></p>

<h1>Listing Outlines</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Course</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outlines.each do |outline| %>
      <tr>
        <td><%= outline.title %></td>
        <td><%= outline.description %></td>
        <td><%= outline.course %></td>
        <td><%= outline.user %></td>
        <td><%= link_to 'Show', outline %></td>
        <td><%= link_to 'Edit', edit_outline_path(outline) %></td>
        <td><%= link_to 'Destroy', outline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

