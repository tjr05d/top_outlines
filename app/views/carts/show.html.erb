<div id="mycart" class="small-10 small-centered medium-8 large-8 column">
  <div class="p1 glassy-bg mb1 text-center radius-l1 radius-r1">
    <h4>My Cart</h4>
    <p class="mb0"> You've selected <span class="cart-count"><%=current_user.cart_count%></span> outlines!</p>
  </div>

    <% @cart_outlines.each do |outline|%>
      <div data-equalizer class="cart-movie large-12 column mb1">
      <div class="column large-2 text-center p0" data-equalizer-watch>
        <%=link_to outline do%>
          <%=image_tag class: "radius-l1"%>
        <%end%>
      </div>
      <div class="column large-7 glassy-bg text-center" data-equalizer-watch>
          <p class="scale ptm"> <%= outline.title %> </p>
      </div>
      <div class="column large-3 primary-bg text-center radius-r1" data-equalizer-watch>
        <%=link_to "" , data: {targetUrl: remove_from_cart_path(outline)} do%>
          <i class="fi-x right"></i>
        <%end%>
        <h4 class="scale">$ <%= outline.price %></h4>
      </div>
    </div>
    <%end%>
  </div>
  <div>
    <p>Cart Total:<%= @total_price %></p>
  </div>
<%=link_to "Checkout", new_transaction_path, class: "button" unless current_user.get_cart_outlines.blank?%>
